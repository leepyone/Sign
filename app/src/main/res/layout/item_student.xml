<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    cardView:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/color_f4"

    android:foreground="?android:attr/selectableItemBackground"
    cardView:cardElevation="0dp"
    layout_height="2dp"
    layout_width="2dp">


    <RelativeLayout
        android:id="@+id/the_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_list_iv_list"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/studentId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_list_iv_list"
            android:text="学号"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/studentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="学生姓名"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/item_list_iv_list"

            android:layout_below="@+id/studentId"

            />
        <TextView
            android:id="@+id/signStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:text="签到状态"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/studentId"

            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
